<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.codehaus.sonar-plugins</groupId>
    <artifactId>parent</artifactId>
    <version>17</version>
  </parent>

  <groupId>org.codehaus.sonar-plugins.android</groupId>
  <artifactId>sonar-android-plugin</artifactId>
  <version>1.0</version>
  <packaging>sonar-plugin</packaging>

  <name>Sonar Android Plugin</name>
  <description>Enables analysis of Android projects into Sonar.</description>
  <url>http://docs.codehaus.org/display/SONAR/Android+Plugin</url>

  <inceptionYear>2013</inceptionYear>
  <organization>
    <name>Jerome Van Der Linden, Stephane Nicolas, Florian Roncari, Thomas Bores and SonarSource</name>
    <url>http://docs.codehaus.org/display/SONAR/Android+Plugin</url>
  </organization>
  <licenses>
    <license>
      <name>GNU LGPL 3</name>
      <url>http://www.gnu.org/licenses/lgpl.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git@github.com:SonarCommunity/sonar-android.git</connection>
    <developerConnection>scm:git:git@github.com:SonarCommunity/sonar-android.git</developerConnection>
    <url>https://github.com/SonarCommunity/sonar-android</url>
    <tag>HEAD</tag>
  </scm>
  <issueManagement>
    <system>JIRA</system>
    <url>https://jira.codehaus.org/browse/SONARPLUGINS/component/15860</url>
  </issueManagement>
  <ciManagement>
    <system>Cloudbees</system>
    <url>http://sonarplugins.ci.cloudbees.com/job/Android</url>
  </ciManagement>

  <properties>
    <sonar.version>3.4.1</sonar.version>
    <!-- Configuration for sonar-packaging-maven-plugin -->
    <sonar.pluginClass>org.sonar.plugins.android.lint.AndroidLintPlugin</sonar.pluginClass>
    <sonar.pluginName>Android</sonar.pluginName>
    <sonar.requirePlugins>java:1.1</sonar.requirePlugins>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.codehaus.sonar</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${sonar.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.9</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>1.9.5</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
      <version>2.2.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.android.tools.lint</groupId>
      <artifactId>lint_api</artifactId>
      <version>r17</version>
      <exclusions>
      	<exclusion>
      		<artifactId>sonar-xml-plugin</artifactId>
      		<groupId>org.sonar.plugins.xml</groupId>
      	</exclusion>
      </exclusions>
    </dependency>
  </dependencies>

  <repositories>
    <!-- START Dirty hack -->
    <!-- This hack is used so long Android Lint Tool jars files aren't in
      Maven Central Repository -->
    <!-- See https://groups.google.com/forum/#!topic/adt-dev/HvDcynqIuj4 -->
    <repository>
      <id>android-lint-libs</id>
      <url>file:${project.basedir}/libs/</url>
    </repository>
    <!-- END Dirty hack -->
  </repositories>

</project>
